{{# each product }}

<div class="row">
    {{# each this }}

    <div class="col-sm-6 col-md-4">
        {{#if this.quantity}}
        <div class="thumbnail">

            {{else }}
            <div class="thumbnail outofstock">
                {{/if}}
                <img src="{{ this.url_img }}" alt="img-of-{{this.title}}" class="img-responsive">
                <div class="caption">
                    <h3>{{ this.title }}</h3>

                    <p>Quantidade: {{this.quantity}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">${{ this.price }}</div>
                        {{#if this.quantity}}

                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add ao
                            carrinho</a>
                        {{else }}
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right disabled"
                            role="button">Add ao
                            carrinho</a>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}