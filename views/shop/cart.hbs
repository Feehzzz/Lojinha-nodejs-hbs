{{#if products}}
<div clas='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <ul class='list-group'>
      {{#each products}}
      <li class='list-group-item'>
        <span class='badge'>{{this.qty}}</span>
        <strong>{{this.item.title}}</strong>
        <span class="label label-success">{{this.price}}</span>
        <div class='btn-group'>
          <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Acction <span
              class='caret'></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">-</a></li>
            <li><a href="#">Exluir todos</a></li>

          </ul>
        </div>
      </li>
      {{/each}}

    </ul>

  </div>
</div>

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <strong>Total: {{ this.totalPrice}}</strong>
  </div>
</div>
<hr>

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <a href="/checkout" type="button" class="btn btn-success">checkout</a>
  </div>
</div>


{{else}}

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <h2>Carrinho vazio</h2>
  </div>
</div>

{{/if}}