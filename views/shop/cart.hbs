{{#if products}}
<div clas='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <ul class='list-group'>
      {{#each products}}
      <li class='list-group-item'>
        <span class='badge'>{{this.qty}}</span>
        <strong>{{this.item.title}}</strong>
        <span class="label label-success">{{this.price}}</span>
        <div class='btn-group'>
          <a href="/reduce/{{this.item._id}}"><button class="btn btn-primary btn-xs" type="button"><i class="fas fa-minus"></i></button></a>
          <a href="/increment/{{this.item._id}}"><button class="btn btn-primary btn-xs" type="button"><i class="fas fa-plus"></i></button></a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <strong>Total: {{ this.totalPrice}}</strong>
  </div>
</div>
<hr>

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <a href="/checkout" type="button" class="btn btn-success">checkout</a>
  </div>
</div>


{{else}}

<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <h2>Carrinho vazio</h2>
  </div>
</div>

{{/if}}