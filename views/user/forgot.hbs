<div class="row">
  <div class='col-md-4 col-md-offset-4'>
    <h1>Forgot</h1>
    <form action="api/recovery_password" method="POST">
      <div class='form-group'>
        <label for="email">E-mail</label>
        <input type="text" id='email' name='email' class='form-control' placeholder="dumbledore@hogwarts.uk">
      </div>
      <input type="hidden" name="_csrft" value='{{csrfToken}}'>
      <button type="submit" class='btn btn-primary'>Send Email</button>
      
    </form>
  </div>

</div>